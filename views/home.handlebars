<!--Homepage-->
<div class="container">
     <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>Tutorialzine Scraper</h1>
            <br><br>
            <h3 id="savedArticles">New Scraped Articles</h3>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <button type="button" class="btn btn-info read">Read Article<a href={{this.link}} target="_blank" class="card-link"></a></button>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>